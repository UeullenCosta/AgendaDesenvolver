
<%- include('includes/head.ejs') %>

<div class="container my-5">
  <H2 class="mt-3 mb-3"> Cadastro de novo usuário</H2>
  <%- include('includes/messages.ejs') %>
  <form class="row g-3 needs-validation" method="post" action="/cadastroUsuario">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="col-md-4">
      <label  class="form-label">Nome</label>
      <input type="text" class="form-control"  name ="nome" placeholder="Nome do Usuario">
 
    </div>
    <div class="col-md-4">
      <label  class="form-label">Sobrenome</label>
      <input type="text" class="form-control" name ="sobrenome" placeholder="Sobrenome" required>

    </div>
    <div class="col-md-4">
      <label class="form-label">CPF</label>
      <div class="input-group has-validation">
        <input type="text" class="form-control" name ="cpf"  required placeholder="000.000.000-00">
 
      </div>
    </div>
    <div class="col-md-3">
      <label class="form-label">Especialidade</label>
      <select class="form-select" name="especialidade" required>
        <option selected disabled value="">Escolha o tipo de usuário</option>
        <option>Psicologia</option>
        <option>Fonoaudiologia</option>
        <option>Terapia Ocupacional</option>
        <option>Nutrição</option>
        <option>Recepcionista</option>
        <option>Gestor</option>
      </select>
      <div class="invalid-feedback">
        Please select a valid state.
      </div>
    </div>
    <div class="col-12">
      <button class="btn btn-primary" type="submit">Cadastar</button>
    </div>
  </form>
</div>

<%- include('includes/footer.ejs') %>