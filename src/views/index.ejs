<%- include('includes/head.ejs') %>

<div class="container ">
  <H1 class="mb-4 mt-3">Agenda Desenvolver</H1>
  <%- include('includes/messages.ejs') %>

    <form action="/agenda" method="post" class="input-group mb-4">

      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <input type="date" name="data" class="me-3 form-control" value="<% listaAgenda.data %>">

      <input type="text" name="nome"  class="me-3 form-control" placeholder="Nome do paciente" value="<% listaAgenda.nome %>">

      <select  name="terapeuta" required  class="me-3 form-control">
        <option selected disabled value="<% listaAgenda.terapeuta %>">Terapeuta</option>
        <option>Murilo</option>
        <option>Suria</option>
        <option>Paula</option>
        <option>Nutrição</option>
      </select>

      <select name="horario"  class="me-3 form-control" required >
        <option selected disabled value="<% listaAgenda.horario %>">Horario</option>
        <option value="07:00">07:00:00</option>
        <option value="07:45">07:45</option>
        <option value="08:30">08:30</option>
        <option value="09:15">09:15</option>
        <option value="10:00">10:00</option>
        <option value="10:45">10:45</option>
        <option value="11:30">11:30</option>
        <option value="13:00">13:00</option>
        <option value="13:45">13:45</option>
        <option value="14:30">14:30</option>
        <option value="15:15">15:15</option>
        <option value="16:00">16:00</option>
        <option value="16:45">16:45</option>
        <option value="17:30">17:30</option>
      </select>

      <select  name="convenio" required  class="me-3 form-control">
        <option  value="<% listaAgenda.convenio %>">Convenio</option>
        <option>Unimed</option>
        <option>Caesan</option>
        <option>Ipasgo</option>
        <option>Particular</option>
      </select>

      <button class="btn btn-outline-primary" type="submit" >Agendar</button>
    </form>
    
  <!-- TABELA FAKE-->
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Data</th>
        <th scope="col">Paciente</th>
        <th scope="col">Terapeuta</th>
        <th scope="col">Horario</th>
        <th scope="col">Convenio</th>
        <th scope="col">Status</th>
        <th scope="col">Opções</th>
      </tr>
    </thead>


    <tbody>     
      <% listaAgenda.forEach(lista => { %>
        <tr>
          <th scope="row"><%= lista.data %></th>
          <td><%= lista.nome %></td>
          <td><%= lista.terapeuta %></td>
          <td><%= lista.horario %></td>
          <td><%= lista.convenio %></td>
          <td><%= lista.status %></td>
          <td>
            <a href="/agenda/edit/<%= lista.id%>"  class="me-3"> 
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
              <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001"/>
            </svg>
            </a>

            <a href="/agenda/editStatus/<%= lista.id%>/CONFIRMADO" class="link-success me-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard2-check-fill" viewBox="0 0 16 16">
                <path d="M10 .5a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5.5.5 0 0 1-.5.5.5.5 0 0 0-.5.5V2a.5.5 0 0 0 .5.5h5A.5.5 0 0 0 11 2v-.5a.5.5 0 0 0-.5-.5.5.5 0 0 1-.5-.5"/>
                <path d="M4.085 1H3.5A1.5 1.5 0 0 0 2 2.5v12A1.5 1.5 0 0 0 3.5 16h9a1.5 1.5 0 0 0 1.5-1.5v-12A1.5 1.5 0 0 0 12.5 1h-.585q.084.236.085.5V2a1.5 1.5 0 0 1-1.5 1.5h-5A1.5 1.5 0 0 1 4 2v-.5q.001-.264.085-.5m6.769 6.854-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708.708"/>
              </svg>
          </a>

            <a href="/agenda/editStatus/<%= lista.id%>/CANCELADO" class="link-danger">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard-x-fill" viewBox="0 0 16 16">
                <path d="M6.5 0A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0zm3 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5z"/>
                <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1A2.5 2.5 0 0 1 9.5 5h-3A2.5 2.5 0 0 1 4 2.5zm4 7.793 1.146-1.147a.5.5 0 1 1 .708.708L8.707 10l1.147 1.146a.5.5 0 0 1-.708.708L8 10.707l-1.146 1.147a.5.5 0 0 1-.708-.708L7.293 10 6.146 8.854a.5.5 0 1 1 .708-.708z"/>
              </svg>
            </a>
                  
          </td>
          
        </tr>
      <%})%>

    </tbody>
  </table>
</div>

<%- include('includes/footer.ejs') %>